<div
  class="bg-base-100/90 text-base-content sticky top-0 z-30 flex h-16 w-full [transform:translate3d(0,0,0)] justify-center backdrop-blur transition-shadow duration-100 print:hidden shadow-xs"
>
  <span
    class="tooltip tooltip-bottom before:text-xs before:content-[attr(data-tip)]"
    data-tip="Menu"
  >
    <label
      aria-label="Open menu"
      for="drawer"
      class="btn btn-square btn-ghost drawer-button lg:hidden"
    >
      {{- partial "icons/menu.html" -}}
    </label>
  </span>
  <div class="lg:hidden">{{- site.Title -}}</div>

  <div class="hidden md:flex flex-row items-center">
    <button onclick="changeTheme()" class="btn btn-ghost">
      {{- partial "icons/sun.html" (dict "Class" "fill-current" "ID" "sun-icon")
      -}} {{- partial "icons/moon.html" (dict "Class" "fill-current" "ID"
      "moon-icon") -}}
    </button>
    <ul class="menu menu-horizontal px-1">
      {{- range site.Menus.main -}}
      <li><a href="{{- .URL -}}">{{- .Name -}}</a></li>
      {{- end -}}
    </ul>
  </div>
</div>
